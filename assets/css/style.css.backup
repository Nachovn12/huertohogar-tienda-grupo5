.form-group input:hover {
    border-color: #a0aec0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.form-group input:focus { 
    border-color: var(--color-primary); 
    box-shadow: 0 0 0 3px rgba(46, 139, 87, 0.2), 0 4px 12px rgba(46, 139, 87, 0.15); 
