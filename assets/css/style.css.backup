#cart-offcanvas {
    position: fixed; top: 0; right: 0; width: 100%; max-width: 400px;
    height: 100%; background-color: white; z-index: 1020; display: flex;
    flex-direction: column; box-shadow: -5px 0 15px rgba(0,0,0,0.15);
    transform: translateX(100%); transition: transform 0.3s ease;
}
