    backdrop-filter: blur(4px);
}

.payment-content, .confirmation-content {
    position: relative;
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    max-width: 800px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    transform: scale(0.9);
    transition: transform 0.3s ease;
}

.payment-modal.visible .payment-content,
.confirmation-modal.visible .confirmation-content {
    transform: scale(1);
}

.payment-header, .confirmation-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #EAEAEA;
    background: linear-gradient(135deg, var(--color-primary), #4CAF50);
    color: white;
    border-radius: 16px 16px 0 0;
}

.payment-header h3, .confirmation-header h3 {
    margin: 0;
    font-size: 1.5rem;
    font-family: var(--font-heading);
}

.confirmation-header {
    text-align: center;
    flex-direction: column;
    gap: 1rem;
}

.success-icon {
    font-size: 3rem;
    animation: bounce 0.6s ease;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
}

.payment-body, .confirmation-body {
    padding: 2rem;
}

.order-summary {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    border: 1px solid #e9ecef;
}

.order-summary h4 {
    margin: 0 0 1rem 0;
    color: var(--color-text-main);
    font-family: var(--font-heading);
}

#payment-items {
    margin-bottom: 1rem;
}

.payment-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid #e9ecef;
}

.payment-item:last-child {
    border-bottom: none;
}

.payment-item-name {
    font-weight: 500;
    color: var(--color-text-main);
}

.payment-item-price {
    color: var(--color-primary);
    font-weight: 600;
}

.payment-totals {
    border-top: 2px solid #e9ecef;
    padding-top: 1rem;
}

.total-line {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    font-size: 1rem;
}

.total-final {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-text-main);
    border-top: 1px solid #e9ecef;
    padding-top: 0.5rem;
    margin-top: 0.5rem;
}

.payment-form {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.form-section {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid #e9ecef;
}

.form-section h4 {
    margin: 0 0 1.5rem 0;
    color: var(--color-text-main);
    font-family: var(--font-heading);
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-section h4::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(135deg, var(--color-primary), #4CAF50);
    border-radius: 2px;
}

.payment-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.payment-method {
    position: relative;
    cursor: pointer;
}

.payment-method input[type="radio"] {
    position: absolute;
    opacity: 0;
    pointer-events: none;
}

.method-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    transition: all 0.3s ease;
    background: white;
}

.method-card i {
    font-size: 2rem;
    color: #6c757d;
}

.method-card span {
    font-weight: 600;
    color: var(--color-text-main);
}

.payment-method input[type="radio"]:checked + .method-card {
    border-color: var(--color-primary);
    background: rgba(46, 139, 87, 0.1);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(46, 139, 87, 0.2);
}

.payment-method input[type="radio"]:checked + .method-card i {
    color: var(--color-primary);
}

.payment-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
}

.confirmation-body {
    text-align: center;
}

.confirmation-body p {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
}

.order-details {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    text-align: left;
}

.order-details h4 {
    margin: 0 0 1rem 0;
    color: var(--color-text-main);
    font-family: var(--font-heading);
    text-align: center;
}

.confirmation-total {
    text-align: center;
    font-size: 1.3rem;
    color: var(--color-primary);
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 2px solid #e9ecef;
}

.confirmation-actions {
    margin-top: 2rem;
}

.terms-link, .privacy-link {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
}

.terms-link:hover, .privacy-link:hover {
    text-decoration: underline;
}

/* Responsive para modales de pago */
@media (max-width: 768px) {
    .payment-content, .confirmation-content {
        width: 95%;
        max-height: 95vh;
    }
    
    .payment-header, .confirmation-header {
        padding: 1rem 1.5rem;
    }
    
    .payment-body, .confirmation-body {
        padding: 1.5rem;
    }
    
    .payment-methods {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .payment-actions {
        flex-direction: column;
    }
    
    .form-row {
        flex-direction: column;
    }
}

/* Responsive para ofertas especiales */
@media (max-width: 768px) {
    .offers-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    .offer-card {
        min-height: 400px;
    }
    
    .offer-content {
        padding: 1.25rem;
    }
    
    .offer-title {
        font-size: 1.1rem;
    }
    
    .offer-description {
        font-size: 0.85rem;
    }
    
    .offer-pricing {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
    
    .offer-price {
        font-size: 1.5rem;
    }
    
    .offer-original-price {
        font-size: 1rem;
    }
    
    .offer-discount {
        font-size: 0.75rem;
        padding: 0.25rem 0.6rem;
    }
}

@media (max-width: 480px) {
    .offers-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .offer-card {
        min-height: 350px;
    }
    
    .offer-content {
        padding: 1rem;
    }
    
    .offer-title {
        font-size: 1rem;
    }
    
    .offer-description {
        font-size: 0.8rem;
    }
    
    .offer-actions {
        gap: 0.5rem;
    }
    
    .offer-add-btn, .offer-view-btn {
        padding: 0.6rem;
        font-size: 0.85rem;
    }
}

